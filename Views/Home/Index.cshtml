@model PenaltyCalculation.Models.InputModel


@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.DateError != null)
{
<h3 style="color:orangered">@ViewBag.DateError</h3>
}
else
{
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <h6 style="color:orangered">CheckOut Date</h6>
                @Html.TextBoxFor(p => p.CheckOutDate, new { @class = "form-control", @type = "date" ,@required  = "required"})
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <h6 style="color:orangered">Returned Date</h6>
                @Html.TextBoxFor(p => p.ReturnDate, new { @class = "form-control", @type = "date" ,@required  = "required"})
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <h6 style="color:orangered">Country</h6>
                @Html.DropDownListFor(p => p.CountryId, (List<SelectListItem>)ViewBag.countryDropDownItems, new { @class = "form-control" ,@required  = "required"})
            </div>
            <button style="float:right" type="submit" class="btn btn-danger">Submit</button>
        </div>

        <h3 style="color:orangered">@ViewBag.result</h3>
    </div>
</form>
}
